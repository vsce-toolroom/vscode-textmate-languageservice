{
  "name": "vscode-textmate-languageservice",
  "description": "Textmate token-based language service for Visual Studio Code.",
  "version": "1.1.0-alpha.6",
  "license": "MIT",
  "author": {
    "name": "SNDST00M",
    "email": "sndst00m@outlook.com",
    "url": "https://gitlab.com/SNDST00M/"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "homepage": "https://gitlab.com/SNDST00M/vscode-textmate-languageservice/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/SNDST00M/vscode-textmate-languageservice.git"
  },
  "main": "./dist/src/main.js",
  "browser": "./dist/src/main.js",
  "types": "./dist/types/src/main.d.ts",
  "bugs": "https://gitlab.com/SNDST00M/vscode-textmate-languageservice/issues",
  "scripts": {
    "prepublishOnly": "npm-run-all bundle clean-production",
    "test": "npm-run-all reset patch stage harness",
    "posttest": "npm-run-all dump reset",
    "clean": "del-cli dist",
    "clean-production": "del-cli dist/test",
    "pegjs": "npm-run-all pegjs-build pegjs-prettier pegjs-tspegjs-90-hack",
    "pegjs-build": "peggy --plugin ts-pegjs --extra-options-file src/parser/pegconfig.json --dependency matchers:./matchers -o src/parser/parser.ts src/parser/parser.pegjs",
    "pegjs-prettier": "prettier --config .prettierrc.json --write src/parser/parser.ts",
    "pegjs-tspegjs-90-hack": "replace-in-files --regex='let(\\s\\S+\\s=\\srequire)' --replacement='import$1' src/parser/parser.ts",
    "prebundle": "npm-run-all clean pegjs",
    "bundle": "npm-run-all bundle-src bundle-test",
    "bundle-src": "webpack-cli --config webpack.config.js",
    "bundle-test": "npm-run-all bundle-test-build bundle-test-web bundle-test-copy bundle-test-clean",
    "bundle-test-web": "webpack-cli --config webpack.config.web.test.js",
    "bundle-test-build": "tsc --project tsconfig.node.test.json",
    "bundle-test-copy": "cpy **/* ../../dist/test --cwd=out/test --parents",
    "bundle-test-clean": "del-cli out dist/types/test dist/test/data/selectors",
    "reset": "npm-run-all reset-git reset-npm reset-pack",
    "reset-git": "git submodule update -f --init",
    "reset-npm": "npm --prefix ./test/vscode-matlab install",
    "reset-pack": "del-cli *.tgz test/vscode-matlab/*.tgz",
    "patch": "cpy * ../vscode-matlab --cwd=test/vscode-matlab-patches --parents",
    "stage": "npm-run-all stage-pack stage-dependencies stage-data stage-samples",
    "stage-pack": "npm-run-all stage-pack-src stage-pack-tar stage-pack-copy stage-pack-install",
    "stage-pack-src": "npm run bundle",
    "stage-pack-tar": "npm pack",
    "stage-pack-copy": "cpy *.tgz test/vscode-matlab",
    "stage-pack-install": "glob-run npm --prefix ./test/vscode-matlab i --omit=dev *.tgz",
    "stage-dependencies": "npm install --prefix ./test/vscode-matlab --package-lock false mocha@^10.2.0 @vscode/test-electron@^2.2.0 @vscode/test-web@^0.0.34",
    "stage-data": "npm-run-all stage-data-touch stage-data-copy",
    "stage-data-touch": "make-dir test/vscode-matlab/data",
    "stage-data-copy": "cpy data/*/*.json vscode-matlab --cwd=test --parents",
    "stage-samples": "npm-run-all stage-samples-touch stage-samples-copy",
    "stage-samples-touch": "make-dir test/vscode-matlab/samples",
    "stage-samples-copy": "cpy samples/*.m vscode-matlab --cwd=test --parents",
    "harness": "npm-run-all harness-rebuild harness-electron harness-web",
    "harness-rebuild": "npm run --prefix ./test/vscode-matlab vscode:prepublish",
    "harness-electron": "mocha ./test/vscode-matlab/node_modules/vscode-textmate-languageservice/dist/test/harness-electron.test",
    "harness-web": "node ./test/vscode-matlab/node_modules/vscode-textmate-languageservice/dist/test/harness-web.test",
    "dump": "cpy */*.json ../../data --cwd=test/vscode-matlab/data --parents"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.14.2",
    "@types/webpack-env": "1.18",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/test-web": "^0.0.34",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "encoded-uint8array-loader": "^1.0.3",
    "fast-deep-equal": "^3.1.3",
    "glob-run": "^0.1.7",
    "make-dir-cli": "^2.0.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "vscode-oniguruma": "^1.7.0",
    "path-browserify": "^1.0.1",
    "peggy": "^2.0.1",
    "prettier": "^2.3.1",
    "replace-in-files-cli": "^1.0.0",
    "ts-loader": "^9.4.2",
    "ts-pegjs": "^3.0.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.4.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/vscode": "^1.51.0",
    "type-fest": "^0.8.1",
    "vscode-textmate": "7.0.1"
  }
}
