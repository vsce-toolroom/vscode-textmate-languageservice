{
  "name": "vscode-textmate-languageservice",
  "description": "Textmate language service for Visual Studio Code.",
  "version": "0.1.1",
  "license": "MIT",
  "author": {
    "name": "SNDST00M",
    "email": "sndst00m@outlook.com",
    "url": "https://github.com/SNDST00M/"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "homepage": "https://github.com/SNDST00M/vscode-textmate-languageservice/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/SNDST00M/vscode-textmate-languageservice.git"
  },
  "main": "./out/src/index.js",
  "types": "./out/src/index",
  "bugs": "https://github.com/SNDST00M/vscode-textmate-languageservice/issues",
  "scripts": {
    "compile": "tsc -p ./",
    "mocha": "mocha out/test --config .mocharc.json --require dotenv/config",
    "patch": "npx cpy test/textmate-configuration.json test/vscode-matlab",
    "stage": "npm-run-all stage:prepare stage:cwd stage:test",
    "stage:install": "npm pack && cd test/vscode-matlab && npm install ../../vscode-textmate-languageservice-0.1.1.tgz --production && cd -",
    "stage:cwd": "cd test/vscode-matlab/node_modules/vscode-textmate-languageservice",
    "stage:test": "npm run stage:cwd && npm install --only=production && npm test && cd -",
    "test": "npm-run-all compile patch stage stage:cwd mocha"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^7.0.43",
    "@types/vscode": "^1.51.0",
    "cpy-cli": "^3.1.1",
    "dotenv": "^10.0.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.1",
    "node-fetch": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.5",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "delay": "^5.0.0",
    "pkg-dir": "^5.0.0",
    "vscode-oniguruma": "^1.5.1",
    "vscode-textmate": "^5.4.0"
  }
}
