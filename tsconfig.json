{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "outDir": "out",
    "declarationDir": "dist/types",
    "declaration": true,
    "types": ["node", "webpack-env"],
    "typeRoots": ["node_modules/@types"],
    "rootDir": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "."
  },
  "include": [
    "src/**/**.ts",
    "test/*.test.ts",
    "test/suite/*.test.ts",
    "test/util/*.ts"
  ]
}
