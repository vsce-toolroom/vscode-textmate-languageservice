{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["es6", "es2016", "dom"],
		"allowJs": true,
		"sourceMap": false,
		"resolveJsonModule": true,
		"rootDir": ".",
		"types": ["node", "node-fetch", "mocha"]
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"test/vscode-matlab",
		"out"
	]
}
