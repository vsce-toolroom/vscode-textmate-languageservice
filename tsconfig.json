{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "out",
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "src",
    "test/*.ts",
    "test/suite/*.test.ts",
    "test/util/*.ts"
  ],
  "exclude": [
    "test/data/*/*.json"
  ]
}
