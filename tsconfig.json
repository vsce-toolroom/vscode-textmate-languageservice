{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "out",
    "declarationDir": "dist/types",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "types": ["context", "node", "webpack-env", "imports"],
    "rootDir": ".",
    "resolveJsonModule": true,
    "lib": ["es2019", "dom"],
    "target": "es2019",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "wasm.d.ts", "typings/**/*"]
}
